<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.rychlinski.damian.mobilnatelemetria.BluetoothFragmentv2"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ocena: "
            android:textSize="76dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvOcena"
            android:text="0.0"
            android:textSize="76dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text=" Temp. powietrza: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/tvAirTemp"
            android:text="0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text=" Temp. płynu chłod.: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:id="@+id/tvCoolantTepm"
            android:text="0.0"/>

    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lcRpm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lcSpeed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lcLoadThrottle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lcLoad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25" />

        </TableRow>

    </TableLayout>


</LinearLayout>
